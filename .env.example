# Kinetic Banking OS â€” Environment Variables
# Copy to .env and fill in values

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# PostgreSQL
DATABASE_URL=postgresql://kinetic:kinetic@localhost:5432/kinetic

# OpenSearch
OPENSEARCH_URL=http://localhost:9200

# RudderStack (if self-hosted)
RUDDERSTACK_DATA_PLANE_URL=http://localhost:8080

# LLM (choose one)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
# Or use Ollama locally (no key needed)
LLM_PROVIDER=ollama

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=

# MLflow (host port 5001 to avoid conflict with AirPlay/other services)
MLFLOW_TRACKING_URI=http://localhost:5001
